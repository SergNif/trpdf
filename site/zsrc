if [[ $EUID == 0 ]]; then
PS1=$'%{\e[1;7m%}%n@%m:%~ #%{\e[1;0m%} ';
else
PS1=$'%{\e[1;7m%}%n@%m:%~ >%{\e[1;0m%} ';
fi
PROMPT=$PS1;
RPROMPT=$'%{\e[1;34m%}%T%{\e[0m%}'

